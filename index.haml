    %ul.list-inline
     -menu.each do |item|
      %li
       %a.menu-link{href:item[:link]}=item[:title]
   .absolute.black.large-padding.white-text.full-width#description 
    .row.midlle-xs.center-xs
     .col-xs-7.col-sm-6.white-text.medium
      Honestidad y Compromiso Laboral
     .col-xs.hidden#sticky-navigation
      .box
       %nav.text-right.navigation#responsive-nav
        %i.glyphicon.glyphicon-menu-hamburger.white-text.subtitle.glyphicon-remove#menu-opener
        %ul.list-inline
         -menu.each do |item|
          %li
           %a.menu-link{href:item[:link]}=item[:title]
  
  .text-center.relative#Servicios
   .absolute.white-text#menu-title
    %h2.Graduate.tittle Productos y Servicios 
   -menu_photos=[{name:"Cableado Estructurado",pricing:"", image:"Cableado"},{name:"Venta de Equipos TI",pricing:"", image:"equipos"},{name:"Soporte y Reparación de Equipos TI ",pricing:"", image:"soporte"}]
   .row
    -menu_photos.each do |photo|
     .col-md-4.col-lg-4.col-sm-4.col-xs-12.food{style:"background-image:url(/imgs/tech/#{photo[:image]}-thumb.jpg)"}
      .screen
       .row.middle-xs.full-height
        .col-xs-12.white-text
         %h3.Graduate.subtitle= photo[:name]
         %p.no-margin=photo[:pricing]

  #gallery
   .inner
    -gallery_images.each do |image|
     .image{style:"background-image:url(/imgs/food/#{image})"}
