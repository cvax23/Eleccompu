  .row.full-height.middle-xs.center-xs.relative.up#home
   .col-xs-12
    .box.white-text
     %img{src:"/imgs/logo.png", width:300}
     %h1.Graduate.title.no-margin Electronica y Computadoras
     %p#is-open 
      %i.glyphicon.glyphicon-time 
